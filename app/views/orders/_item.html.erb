<% if product = Product.find_by(id: item.product_id) %>
<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= item.total_price_cents %>
  </td>
</tr>
<% end %>